%section.home-full-screen
  .container
    .row.banner
      .col-md-4.event-logo
        = image_tag "devops.png"
      .col-md-8
        .brand-header
          DevOpsDays India 2016
        .tag-line
          November 5th, 6th | Bangalore
        .submit-talk
          = link_to "Submit a Proposal", "https://www.papercall.io/devopsdays-india-2016"
        .register
          = link_to "Register", "https://www.townscript.com/e/dod16"

%section#venue.home-row
  .container
    .row
      .span-12
        %h1 Venue
      .col-md-8
        .map-overlay
        %iframe{frameborder: "0", width: "100%", height: "400",
                style: "pointer-event:none;",
                src: "https://www.google.com/maps/embed/v1/place?q=Hotel%20Royal%20Orchid%2C%20Old%20Airport%20Road%2C%20Bengaluru&key=AIzaSyBd59PEx8Xebd_fsXf5Re5K4HA5MrwCpTU"}
      .col-md-4.address
        %h3 Hotel Royal Orchid
        %p
          1, Golf Avenue,
        %p
          Adjoining KGA Golf Course,
        %p
          Old Airport Rd
        %p
          Bengaluru, Karnataka 560008, India

%section#sponsors.home-row
  .container
    .row
      .span-12
        .col-md-12
          %h1 Gold Sponsors
          .col-md-12.sponsor
            = link_to "https://www.digitalocean.com/", target: "_blank" do
              = image_tag "digitalocean.png"
        .col-md-12
          %h3 Coaster Sponsors
          .col-md-12.sponsor
            = link_to "http://www.aspose.com/", target: "_blank" do
              = image_tag "aspose.png"
    .row.sponsorship-doc
      .col-md-12
        = link_to "Become a Sponsor - Sponsorship Doc", "/DOD16_Sponsorship_Prospectus.pdf"


